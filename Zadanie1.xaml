<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bar Chart" Height="450" Width="800">
    <Canvas Width="200" Height="200">
        <!-- Walls -->
        <Rectangle Width="100" Height="80" Fill="#A0522D" Stroke="Black" StrokeThickness="1" Canvas.Left="50" Canvas.Top="70"/>

        <!-- Roof -->
        <Polygon Points="50,70 100,20 150,70" Fill="#8B4513" Stroke="Black" StrokeThickness="1"/>

        <!-- Door -->
        <Rectangle Width="20" Height="40" Fill="#D2691E" Stroke="Black" StrokeThickness="1" Canvas.Left="90" Canvas.Top="110"/>

        <!-- Window -->
        <Rectangle Width="20" Height="20" Fill="#ADD8E6" Stroke="Black" StrokeThickness="1" Canvas.Left="65" Canvas.Top="90"/>
    </Canvas>
</Window>
