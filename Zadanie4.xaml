<Window x:Class="zadanie_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zadanie_4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas Width="400" Height="300">
        <!-- Body of Piano -->
        <Path Data="M 20,150 C 50,50 150,50 280,150 L 280,250 C 250,280 50,280 20,250 Z"
          Fill="#444" Stroke="Black" StrokeThickness="2"/>

        <!-- Keyboard -->
        <Rectangle Width="250" Height="50" Fill="White" Stroke="Black" StrokeThickness="1" Canvas.Left="30" Canvas.Top="150"/>
        <!-- Black Keys -->
        <Rectangle Width="15" Height="30" Fill="Black" Canvas.Left="60" Canvas.Top="150"/>
        <Rectangle Width="15" Height="30" Fill="Black" Canvas.Left="110" Canvas.Top="150"/>
        <Rectangle Width="15" Height="30" Fill="Black" Canvas.Left="160" Canvas.Top="150"/>
        <Rectangle Width="15" Height="30" Fill="Black" Canvas.Left="210" Canvas.Top="150"/>
        <Rectangle Width="15" Height="30" Fill="Black" Canvas.Left="260" Canvas.Top="150"/>

        <!-- Lid (крышка) -->
        <Path Data="M 280,150 C 320,80 400,80 400,150 L 400,200 C 380,250 300,250 280,200 Z"
          Fill="#666" Stroke="Black" StrokeThickness="2"/>

        <!-- Leg 1 -->
        <Rectangle Width="20" Height="80" Fill="#8B4513" Stroke="Black" StrokeThickness="1" Canvas.Left="70" Canvas.Top="220"/>
        <!-- Leg 2 -->
        <Rectangle Width="20" Height="80" Fill="#8B4513" Stroke="Black" StrokeThickness="1" Canvas.Left="200" Canvas.Top="220"/>

    </Canvas>
</Window>
